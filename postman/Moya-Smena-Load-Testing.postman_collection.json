	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Автоматическое обновление дат",
					"const today = new Date();",
					"const tomorrow = new Date(today);",
					"tomorrow.setDate(tomorrow.getDate() + 1);",
					"const monthLater = new Date(today);",
					"monthLater.setDate(monthLater.getDate() + 30);",
					"",
					"function formatDate(date) {",
					"    const year = date.getFullYear();",
					"    const month = String(date.getMonth() + 1).padStart(2, '0');",
					"    const day = String(date.getDate()).padStart(2, '0');",
					"    return `${year}-${month}-${day}`;",
					"}",
					"",
					"pm.variables.set('today', formatDate(today));",
					"pm.variables.set('tomorrow', formatDate(tomorrow));",
					"pm.variables.set('month_later', formatDate(monthLater));"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Автоматические тесты для всех запросов",
					"pm.test('Status code is 200', function () {",
					"    pm.response.to.have.status(200);",
					"});",
					"",
					"pm.test('Response time is less than 1000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(1000);",
					"});",
					"",
					"pm.test('Response has body', function () {",
					"    pm.response.to.have.body();",
					"});",
					"",
					"pm.test('Content-Type is JSON', function () {",
					"    pm.response.to.have.header('Content-Type');",
					"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
					"});"
				]
			}
		}
